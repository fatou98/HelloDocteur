                                    <form method="post" action="/search">
                                        <div class="row align-items-end">
                                            <div class="col-12 col-md-5">
                                                <div class="form-group">
                                                    <select class="form-control" id="speciality" name="specialite">
                                                        <option value="">Specialités</option>
