{% extends 'layoutmedecin.html.twig' %}



    {% block content %}
    <div>
   {% block flash %}
            {% for flash_message in app.session.flashbag.get('success') %}
                <div class="container alert alert-success" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('info') %}
                <div class="container alert alert-info" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('warning') %}
                <div class="container alert alert-warning" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('danger') %}
                <div class="container alert alert-danger" role="alert">
                    {{ flash_message }}
                </div>
                
            {% endfor %}
        {% endblock %}

  <table class="table table-striped table-hover" id="datatable3" cellspacing="0" width="100%">
                    <thead>
<tr>

<th>nomcomplet</th>
<th>Telephone</th>
<th>adresse</th>
<th>date</th>
<th>heure</th>
<th>etat</th>
<th>Actions</th>


</tr>
</thead><tbody>

{% for prise in listerendezvous %}
<tr>
<td>{{ prise.patient.nomcomplet }}</td>
<td>{{ prise.patient.tel }}</td>
<td>{{ prise.patient.adresse }}</td>
<td>{{ prise.creneau.creneauitem.datecreneau | date }}</td> 
<td>{{ prise.creneau.heuredebut }} -{{ prise.creneau.heurefin }}</td>
<td>{{ prise.etat ? 'Validé' : 'Non Validé' }}</td>

<td>
                             <a href="{{ path('validerrdv', {'id' : prise.id }) }}" class="btn btn-rounded btn-primary btn-small">Valider</a>

</td>
</tr>
{% endfor %}
</tbody> 



</table>
  </div>
{% endblock %}